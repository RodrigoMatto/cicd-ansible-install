[Unit]
Description=nexus service
After=network.target

[Service]
Type=forking
LimitNOFILE=65536
User={{ nexus_system_user }}
Group={{ nexus_system_user }}
ExecStart={{ nexus_home_directory }}/bin/nexus start
ExecStop={{ nexus_home_directory }}/bin/nexus stop
User={{ nexus_system_user }}
Restart=on-abort

[Install]
WantedBy=multi-user.target
